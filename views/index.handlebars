<h1>Burgers!</h1>

<h2>burgers that are not devoured!</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  {{!-- {{>burger-block devoured=true}} --}}
  <li>
    {{burger_name}}

    <button class="change-eat" data-id="{{id}}" newDevoured="{{devoured}}">
      {{#if devoured}}Burger TIME!{{else}}Not Burger TIME!{{/if}}
    </button>

    {{!-- <button class="delete-cat" data-id="{{this.id}}">DELETE!</button> --}}

  </li>

  {{/unless}}
  {{/each}}
</ul>

<h2>burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  {{!-- {{> burgers/burger-block devoured=false}} --}}
  <li>
    {{burger_name}}

    <button class="change-eat" data-id="{{id}}" newDevoured="{{devoured}}">
      {{#if devoured}}Burger TIME!{{else}}Not Burger TIME!{{/if}}
    </button>

    {{!-- <button class="delete-cat" data-id="{{this.id}}">DELETE!</button> --}}

  </li>

  {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> devoured!<br>
    <input type="radio" name="devoured" value="0"> Not devoured
  </div>

  <button type="submit">Add burger</button>
</form>